{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "outDir": "build",
    "rootDir": "src",
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true
  }
}
